@inherits CompositeC1WebPage

@{
    string stylesFolder = "~/Interior";
    string jsFolder = "~/Interior/js";
    string bootstrap = "~/Interior/bootstrap";
    string websiteTitle = HomePageNode.Title;
}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" class="no-js" lang="@Lang">
    <head>
        <title>@CurrentPageNode.Title</title>
		@if (!string.IsNullOrEmpty(CurrentPageNode.Description)) {
			<meta name="description" content="@CurrentPageNode.Description" />
		}
        @PageTemplateFeature("Descriptive HTML head elements")

        <link rel="stylesheet" type="text/css" href="@Href(bootstrap)/css/bootstrap.css" />
        <link rel="stylesheet" type="text/css" href="@Href(bootstrap)/css/bootstrap-responsive.css" />
        <link rel="stylesheet" type="text/css" href="@Href(stylesFolder)/css.css" />
        <link rel="stylesheet" type="text/css" href="@Href(stylesFolder)/main.css" />
        <!--To ensure devices display responsive pages properly, include the viewport meta tag.-->
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />	
        @* SCRIPTS *@
        <script id="modernizr-js" type="text/javascript" src="@Href(jsFolder)/libs/modernizr-2.6.1-respond-1.1.0.min.js"></script>
        <script id="jquery-js" src="//code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>

        <script type="text/javascript" src="@Href(bootstrap)/js/bootstrap.min.js"></script>
        <script type="text/javascript" src="@Href(jsFolder)/holder.js"></script>

         <script type="text/javascript">

             $(document).ready(function () {
                 $('.carousel').carousel({
                     interval: 4000
                 })
             });
    </script>
    </head>
	<body>
		 <div class="container-fluid">
        <div class="container-interior">
            <div class="header" style="height: 128px;">
                <div class="row-fluid">
                    <div class="span2">
                        <a href="/">
                            <img src="/Interior/images/logo.jpg" alt="logo" /></a>
                    </div>
                    <div class="span10">

                       <f:function xmlns:f="http://www.composite.net/ns/function/1.0" name="Rain.Menu" />


                    </div>
                </div>
            </div>

      @RenderBody()
            <div class="footer">
                <div class="row-fluid" style="border-bottom: solid 6px #8dbf2f; margin: 20px 0px;">
                </div>

                <div class="row-fluid">
                    <div class="span2">
                        <a href="\">
                            <img src="/Interior/images/logo-black.jpg" alt="logo" /></a>
                    </div>
                    <div class="span8" style="margin-top: 16px; font-family: 'CaviarDreamsBold'">

                        <span style="">|  ©  2013 by Green House</span>
                    </div>
                    <div class="span2">
                        <div class= "pull-right">
                            <a href="#">
                                <img src="/Interior/images/twitter.jpg" alt="twitter" /></a>
                            <a href="http://www.facebook.com/">
                                <img src="/Interior/images/facebook.jpg" alt="facebook" /></a>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>

        </div>
    </div>
	</body>
</html>
