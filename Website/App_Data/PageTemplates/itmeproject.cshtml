@inherits RazorPageTemplate
@functions {
    public override void Configure()
    {
        TemplateId = new Guid("91f65371-7e5d-4d15-b076-d2909e968692");
        TemplateTitle = "[itme]project";
        Layout = "ItmeMaster.cshtml";
    }

    [Placeholder(Id = "Top", Title = "Top")]
    public XhtmlDocument Top { get; set; }
    [Placeholder(Id = "Left", Title = "Left", IsDefault = true)]
    public XhtmlDocument Left { get; set; }

    [Placeholder(Id = "Right", Title = "Right")]
    public XhtmlDocument Right { get; set; }
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    @*you can add template specific head elements here*@
    <script src="~/Itme/colorbox/jquery.colorbox-min.js"></script>
    <link href="~/Itme/colorbox/colorbox.css" rel="stylesheet" />
    <script type="text/javascript">

        $(document).ready(function () {
            $(".item").colorbox({ rel: 'group4', photo: true });
        });
    </script>
</head>
<body>
    <div class="row-fluid">
        <div class="slider2">
            <div class="header_text2">
                <h2>Website mẫu: @CurrentPageNode.Title</h2>
                <div class="clr"></div>
            </div>
        </div>
        <div class="clr"></div>
    </div>

    <div class="row-fluid">
        <div class="container960">
            <div class="span8">
                @Markup(Left)
            </div>
            <div class="span4">
                <div>
                    <div class="heading1">Danh mục web mẫu</div>
                    <div style="margin-bottom: 10px;">
                        <f:function xmlns:f="http://www.composite.net/ns/function/1.0" name="Itme.ProjectVMenu">
  <f:param name="RootMenu" value="7f5b89ae-f57b-49b5-902e-56711d618fca" />
</f:function>
                    </div>
                </div>
                @Markup(Right)

                <div>

                    <div class="heading1">Tin tức &amp; sự kiện</div>
                  <f:function name="My.Content.NewsTop" xmlns:f="http://www.composite.net/ns/function/1.0">
			<f:param name="NewsDetailPage" value="1cb4fc4c-94bc-4f63-8ddb-4f5f0ab73567" />
		</f:function>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
